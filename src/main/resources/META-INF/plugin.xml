<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.paulinasadowska.localinspectionkotlinexample</id>
    <name>LocalInspectionKotlinExample</name>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.java</depends>
    <vendor>paulinasadowska</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="kotlin"
                         displayName="Inspection basics"
                         groupName="Example inspections"
                         groupPath="Kotlin"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="com.github.paulinasadowska.localinspectionkotlinexample.AnnotationSampleInspection"/>
    </extensions>
</idea-plugin>
